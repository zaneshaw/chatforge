{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "ChatForge",
	"version": "3.1.3",
	"identifier": "dev.squidee.chatforge",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "ChatForge",
				"width": 400,
				"height": 640,
				"maximizable": false,
				"resizable": false
			}
		],
		"security": {
			"csp": "img-src 'self' asset: http://asset.localhost blob: data:",
			"assetProtocol": {
				"enable": true,
				"scope": [
					"*/**"
				]
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "msi",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}