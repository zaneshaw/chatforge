{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-set-always-on-top",
    "opener:default",
    "dialog:default",
    "fs:write-files",
    "clipboard-manager:allow-write-image",
    {
      "identifier": "fs:default",
      "allow": [{ "path": "**" }]
    }
  ]
}